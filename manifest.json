{
  "name": "MindWave Proxy",
  "version": "0.2",
  "manifest_version": 2,
  "minimum_chrome_version": "33",
  "description": "MindWave Proxy",

  "app": {
    "background": {
      "scripts": [ "js/background.js" ]
    }
  },

  "sockets": {
    "tcp": {
      "connect": "*"
    },
    "tcpServer": {
      "listen": "*"
    }
  },

  "permissions": [
    "serial"
  ]
}